             x:Class="XamarinApiRequest.MainPage"
             BackgroundColor="CadetBlue">

    <StackLayout>
        <Button Text="Get Random Action Game" HorizontalOptions="Center" Command="{Binding GetRandomGameCommand}" />
        <Label Text="{Binding CurrentGame}" HorizontalOptions="Center" TextColor="OrangeRed" FontSize="Medium"/>
    </StackLayout>
</ContentPage>
